<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:text="注册"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:gravity="center"
        android:background="@color/white"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dip"
        android:layout_marginTop="15dip"
        android:layout_marginRight="15dip"
        android:orientation="vertical"
        android:background="@drawable/bg_f5f4f4_round_3dip"
        >

        <EditText
            android:id="@+id/etLoginName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:background="#00000000"
            android:textSize="15sp"
            android:paddingLeft="15dip"
            android:paddingRight="15dip"
            android:paddingBottom="10dip"
            android:hint="请设置用户名"
            android:paddingTop="10dip"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#F5F4F4"/>

        <EditText
            android:id="@+id/etPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:maxLines="1"
            android:background="#00000000"
            android:textSize="15sp"
            android:paddingLeft="15dip"
            android:paddingRight="15dip"
            android:paddingBottom="10dip"
            android:hint="请设置密码"
            android:paddingTop="10dip"/>

    </LinearLayout>

    <TextView
        android:id="@+id/tvRegister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="15dip"
        android:layout_marginTop="15dip"
        android:gravity="center"
        android:text="注册"
        android:textSize="14sp"
        android:padding="10dip"
        android:textColor="@color/white"
        android:background="@drawable/bg_blue_round"/>

    <TextView
        android:id="@+id/tvLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_f5f4f4_round_10dip"
        android:textSize="15sp"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="15dip"
        android:layout_marginTop="15dip"
        android:gravity="center"
        android:padding="10dip"
        android:hint="已有账号，去登录"
        android:paddingTop="7dip"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="20dip"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="注册即代表你同意"
                android:textColor="@color/color_gray_alpha40"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="&lt;&lt;隐私条例和服务条款&gt;&gt;"
                android:textColor="#f7389fff"/>

        </LinearLayout>

    </RelativeLayout>
</LinearLayout>